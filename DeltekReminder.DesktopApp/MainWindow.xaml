<Window x:Class="DeltekReminder.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Deltek Reminder" 
        Height="391" 
        Width="525" Icon="DeltekReminder.ico" Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#606A74" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="140"></RowDefinition>
        </Grid.RowDefinitions>

        <tb:TaskbarIcon
            IconSource="DeltekReminder.ico"
            ToolTipText="Hello world"></tb:TaskbarIcon>
        
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="0">
            <Image Source="Icon.png" Height="30" Stretch="Fill" Margin="0,0,10,0"/>
            <TextBlock FontSize="25" Height="30" Foreground="#0091BE">Deltek Reminder</TextBlock>
        </StackPanel>

        <WebBrowser Visibility="Visible" Name="Browser" Grid.Row="1"/>

        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0">URL</TextBlock>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="Url"></TextBox>

                <TextBlock Grid.Row="1" Grid.Column="0">Username</TextBlock>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="Username"></TextBox>

                <TextBlock Grid.Row="2" Grid.Column="0">Password</TextBlock>
                <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="Password"></PasswordBox>
                
                <TextBlock Grid.Row="3" Grid.Column="0">Domain</TextBlock>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="Domain"></TextBox>
            </Grid>
            <Button Margin="0,15,0,0" Grid.Row="1" Grid.ColumnSpan="2" Click="OnConnect_Click">Connect</Button>
        </StackPanel>

    </Grid>
</Window>
