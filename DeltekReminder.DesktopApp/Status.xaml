<desktopApp:PageBase 
    x:Class="DeltekReminder.DesktopApp.Status"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:desktopApp="clr-namespace:DeltekReminder.DesktopApp"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
	Title="Status">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="200">
            <StackPanel>
                <TextBlock FontWeight="Bold">Last checked:</TextBlock>
                <TextBlock x:Name="LastSuccessfulDeltekCheck">1/1/2013</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,10,0,0">
                <TextBlock FontWeight="Bold">Next Check:</TextBlock>
                <TextBlock x:Name="NextCheck">1/1/2013</TextBlock>
            </StackPanel>
        </StackPanel>
        <WebBrowser Visibility="Collapsed" Name="Browser"/>
    </Grid>
</desktopApp:PageBase>
